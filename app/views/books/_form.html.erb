<%= simple_form_for @book do |f| %>
 <%= select_tag(:category_id, options_for_select(@categories, :selected =>@book.category_id), :prompt => "Select a category") %>
  <%= f.input :title, label: "Book Title" %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.button :submit %>
<% end %>